<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="2500" android:fillAfter="true">
    <!--
            확대 / 축소 (scale)
            pivotX,Y => 시작점
            formX,Y => 시작크기
            toX,Y  => 끝크기
            duration = "2500" : 2.5초
            fillAfter="true"  : 실행 후 그대로 크기 유지
    -->
    <scale
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="2.0"
        android:toYScale="2.0"  />
</set>