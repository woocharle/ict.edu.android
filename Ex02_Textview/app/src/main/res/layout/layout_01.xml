        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLines="5"/>

    <!-- maxLength : 한줄에 표현할 수 있는 최대 범위 -->


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )"
        android:background="#00BCD4"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLength="10"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )"
        android:background="#00BCD4"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:id="@+id/textView6"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLength="10"/>

    <!-- 화면 표시 유무 :android:visibility="visible" : 화면표시 android:visibility="invisible" : 화면표시 안됨, 자리 차지함 android:visibility="gone" : 화면표시 안됨, 자리 차지안함 -->


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )"
        android:background="#FFEB3B"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:id="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLength="10"
        android:visibility="invisible"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )텍스트 연습 ( Hello Android )"
        android:background="#FFEB3B"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:id="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLength="10"
        android:visibility="visible"/>

</LinearLayout>